DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_PUBLIC_KEY=

# Discord Backup Channel (where backup threads will be created)
BACKUP_CHANNEL_ID=

SENTRY_DSN=
SENTRY_AUTH_TOKEN=

BOT_REPORT_CHANNEL_ID=
BOT_OWNER_IDS=

MONGO_HOST=
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_DB=
MONGO_API_KEY=
# Maximum database size in MB (optional, used for capacity warnings)
MONGO_DB_MAX_SIZE=

# AWS S3 Configuration for Backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Default AWS region changed from 'us-east-1' to 'us-east-2' to align with new infrastructure.
# If you have existing S3 buckets in 'us-east-1', change this value back to 'us-east-1'.
AWS_REGION=us-east-2
S3_BACKUP_BUCKET=

# Backup Configuration
# Enable or disable nightly backups (default: true)
ENABLE_NIGHTLY_BACKUP=true

# Backup schedule (24-hour format)
BACKUP_HOUR=2
BACKUP_MINUTE=0

# Compression method: 'gzip' (recommended) or 'brotli' (better compression, slightly slower)
COMPRESSION_METHOD=gzip

# Linode Server SSH Configuration (for remote PM2 commands)
LINODE_SSH_HOST=              # Your Linode server IP address
LINODE_SSH_USER=root          # SSH username (default: root)
LINODE_SSH_KEY_PATH=          # Path to SSH private key (optional, defaults to ~/.ssh/id_rsa)
PM2_DEXCOM_APP_NAME=          # PM2 application name to manage
